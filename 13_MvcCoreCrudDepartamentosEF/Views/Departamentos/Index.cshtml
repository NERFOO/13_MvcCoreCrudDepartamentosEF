@model List<Departamento>

    <h1>Departamentos</h1>

<div class="row justify-content-center">
    <a class="btn btn-success" asp-controller="Departamentos" asp-action="Create">Crear nuevo Departamento</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Localidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Departamento dept in Model)
        {
            <tr>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
                <td>
                    <a asp-controller="Departamentos" asp-action="Details" asp-route-idDepartamento="@dept.IdDepartamento" class="btn btn-primary">Details</a>
                    <a asp-controller="Departamentos" asp-action="Update" asp-route-idDepartamento="@dept.IdDepartamento" class="btn btn-info">Update</a>
                    <a asp-controller="Departamentos" asp-action="Delete" asp-route-idDepartamento="@dept.IdDepartamento" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>